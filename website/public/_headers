# Security Headers for SafePrompt Website
# Deployed to Cloudflare Pages

/*
  # SECURITY: Content Security Policy
  # Prevents XSS attacks by restricting resource sources
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net https://www.googletagmanager.com https://www.google-analytics.com https://static.cloudflareinsights.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://*.supabase.co https://api.safeprompt.dev https://dashboard.safeprompt.dev https://www.google-analytics.com https://cloudflareinsights.com; frame-ancestors 'none'; base-uri 'self'; form-action 'self' https://dashboard.safeprompt.dev

  # SECURITY: Prevent clickjacking attacks
  X-Frame-Options: DENY

  # SECURITY: Enforce HTTPS (max-age = 2 years)
  Strict-Transport-Security: max-age=63072000; includeSubDomains; preload

  # SECURITY: Prevent MIME type sniffing
  X-Content-Type-Options: nosniff

  # SECURITY: XSS Protection (legacy browsers)
  X-XSS-Protection: 1; mode=block

  # SECURITY: Referrer policy - only send origin to same origin
  Referrer-Policy: strict-origin-when-cross-origin

  # SECURITY: Permissions policy - disable unnecessary browser features
  Permissions-Policy: geolocation=(), microphone=(), camera=(), payment=(), usb=(), magnetometer=(), gyroscope=(), accelerometer=()

  # SECURITY: Cross-Origin policies
  # Relaxed to allow OAuth popups and third-party integrations
  Cross-Origin-Opener-Policy: same-origin-allow-popups

  # Performance: Cache control for assets
  Cache-Control: public, max-age=3600, must-revalidate

  # Server identification (security by obscurity - don't advertise tech stack)
  X-Powered-By: SafePrompt

# Static assets can be cached longer
/_next/static/*
  Cache-Control: public, max-age=31536000, immutable

# Blog pages can be cached
/blog/*
  Cache-Control: public, max-age=7200, must-revalidate
