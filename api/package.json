{
  "name": "safeprompt-api",
  "version": "1.0.0",
  "description": "SafePrompt API - Prompt injection detection service",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "node test-server.js",
    "vercel-dev": "vercel dev --listen 3000",
    "start": "node test-server.js",
    "test": "npm run test:unit",
    "test:unit": "vitest run --exclude '**/*.integration.test.js'",
    "test:unit:watch": "vitest --exclude '**/*.integration.test.js'",
    "test:integration": "vitest run __tests__/*.integration.test.js",
    "test:integration:watch": "vitest '**/*.integration.test.js'",
    "test:all": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:smoke": "node ../test-suite/run-smoke-tests.js",
    "test:realistic": "node ../test-suite/run-realistic-tests.js",
    "test:quick": "node ../test-suite/run-realistic-tests.js --mode=quick",
    "test:full": "node ../test-suite/run-realistic-tests.js --mode=full",
    "test:accuracy": "node ../test-suite/run-realistic-tests.js --test=accuracy",
    "test:performance": "node ../test-suite/run-realistic-tests.js --test=performance",
    "test:no-ai": "node ../test-suite/run-realistic-tests.js --skip-ai",
    "test:e2e": "node ../test-suite/playground-test-suite.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.76.1",
    "@vercel/sdk": "^1.12.1",
    "dotenv": "^16.6.1",
    "node-fetch": "^3.3.2",
    "resend": "^3.0.0",
    "stripe": "^14.14.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "vercel": "^32.5.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
